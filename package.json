{
    "name": "bolt",
    "version": "4.1.21",
    "homepage": "https://boltcms.io",
    "author": "Bob den Otter <bob@twokings.nl> (https://boltcms.io)",
    "license": "MIT",
    "description": "Bolt 4 npm/javascript packages",
    "keywords": [
        "bolt",
        "cms",
        "php",
        "symfony",
        "vue",
        "content",
        "management",
        "system"
    ],
    "bugs": {
        "url": "https://github.com/bolt/core/issues"
    },
    "main": "webpack.config.js",
    "directories": {
        "tests": "tests"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/bolt/core.git"
    },
    "dependencies": {
        "@vue/cli-service": "^4.5.13",
        "axios": "^0.21.1",
        "baguettebox.js": "^1.11.1",
        "bootbox": "^5.5.2",
        "bootstrap": "^4.5.3",
        "browserslist": "^4.16.6",
        "caniuse-lite": "^1.0.30001228",
        "codemirror": "^5.61.0",
        "dropzone": "^5.9.2",
        "flagpack": "^1.0.5",
        "hotkeys-js": "^3.8.3",
        "jquery": "^3.6.0",
        "locutus": "^2.0.14",
        "luxon": "^1.26.0",
        "no-scroll": "^2.1.1",
        "node-vibrant": "^3.1.6",
        "popper.js": "^1.16.1",
        "register-service-worker": "^1.7.2",
        "selectize": "^0.12.6",
        "simplemde": "^1.11.2",
        "stylelint-config-recommended-scss": "^4.2.0",
        "stylelint-scss": "^3.19.0",
        "terser": "^4.8.0",
        "tinycolor2": "^1.4.2",
        "vue": "^2.6.12",
        "vue-flatpickr-component": "^8.1.6",
        "vue-multiselect": "^2.1.6",
        "vue-simplemde": "^1.1.2",
        "vue-trumbowyg": "^3.6.2",
        "vuedraggable": "^2.24.3",
        "vuex": "^3.6.2",
        "zxcvbn": "^4.4.2"
    },
    "devDependencies": {
        "@babel/core": "^7.14.0",
        "@babel/plugin-transform-regenerator": "^7.13.15",
        "@babel/plugin-transform-runtime": "^7.13.15",
        "@babel/polyfill": "^7.12.1",
        "@babel/preset-env": "^7.14.1",
        "@fortawesome/fontawesome-free": "^5.15.3",
        "@symfony/webpack-encore": "^0.31.0",
        "@vue/test-utils": "^1.2.0",
        "ajv-keywords": "^3.5.2",
        "autoprefixer": "^9.8.6",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^25.5.1",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-standard": "^4.1.0",
        "eslint-plugin-vue": "^6.2.2",
        "genversion": "^2.3.1",
        "jest": "^25.5.4",
        "jest-serializer-vue": "^2.0.2",
        "postcss-loader": "^3.0.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^1.19.1",
        "regenerator-runtime": "^0.13.7",
        "sass": "^1.32.12",
        "sass-loader": "^8.0",
        "source-sans-pro": "^3.6.0",
        "stylelint": "^13.13.1",
        "stylelint-config-standard": "^19.0.0",
        "vue-jest": "^3.0.7",
        "vue-loader": "^15.9.7",
        "vue-router": "^3.5.1",
        "vue-template-compiler": "^2.6.12",
        "webpackbar": "^4.0.0",
        "workbox-webpack-plugin": "^4.3.1"
    },
    "scripts": {
        "start": "encore dev-server --port=8234 --progress --disable-host-check --verbose",
        "build": "npm run genversion && encore production --progress",
        "postbuild": "rm public/assets/fonts/*.ttf; rm public/assets/fonts/*.eot; rm public/assets/fonts/*.woff; rm public/assets/images/fa-*.svg;",
        "build:stats": "encore production --progress --json > webpack_stats.json",
        "serve": "encore dev --watch",
        "lint": "eslint --ext .js,.vue, assets",
        "lint-fix": "eslint --ext .js,.vue, assets --fix",
        "stylelint": "stylelint 'assets/scss'",
        "stylelint-fix": "stylelint 'assets/scss' --fix",
        "csfix": "eslint --ext .js,.vue, assets --fix; stylelint 'assets/scss' --fix",
        "test": "jest",
        "genversion": "genversion --es6 --semi assets/js/version.js"
    },
    "browserslist": [
        "> 1%"
    ],
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
            ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
        },
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/assets/js/app/$1"
        },
        "snapshotSerializers": [
            "<rootDir>/node_modules/jest-serializer-vue"
        ]
    }
}
